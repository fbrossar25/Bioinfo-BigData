<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="fr.unistra.bioinfo.gui">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="%-5level : %date{HH:mm:ss.SSS} [thread : %t] : %class.%M (ligne %line) - %msg%n" />
        </Console>
        <TextAreaAppender name="taa" >
            <PatternLayout pattern="%-5level : %date{HH:mm:ss.SSS} [thread : %t] : %class.%M (ligne %line) - %msg%n" />
        </TextAreaAppender>
        <File name="logfile" fileName="logs/bioinfo.log" append="false">
            <PatternLayout pattern="%-5level : %date{HH:mm:ss.SSS} [thread : %t] : %class.%M (ligne %line) - %msg%n" />
        </File>
    </Appenders>
    <Loggers>
        <Logger name="fr.unistra" level="INFO" additivity="false">
            <AppenderRef ref="taa"/>
            <AppenderRef ref="console" />
            <AppenderRef ref="logfile" />
        </Logger>
        <Root level="ERROR" additivity="false">
            <AppenderRef ref="taa"/>
            <AppenderRef ref="console"/>
            <AppenderRef ref="logfile"/>
        </Root>
    </Loggers>
</Configuration>